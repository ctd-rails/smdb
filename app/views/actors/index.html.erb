<h1>Listing actors</h1>

<table class="table content-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td><%= actor.dob %></td>
        <td><%= link_to 'Show', actor, :class => 'btn btn-default btn-small' %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor), :class => 'btn btn-warning btn-small' %></td>
        <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


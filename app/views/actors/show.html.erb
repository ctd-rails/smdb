<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @actor.name %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @actor.dob %>
</p>

<h3>Roles</h3>
<ul>
  <% @actor.roles.each do |role| %>
    <li>
      <%= role.character_name %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_actor_path(@actor) %> |
<%= link_to 'Back', actors_path %>

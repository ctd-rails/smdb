<%= form_for(@role) do |f| %>
  <% if @role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</h2>

      <ul>
      <% @role.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :character_name %><br>
    <%= f.text_field :character_name %>
  </div>

  <!-- change both of these to select_tags -->
  <div class="field">
    <%= f.label :actor_id %><br>
    <%= f.select(:actor_id, options_from_collection_for_select(Actor.all, :id, :name)) %>
  </div>
  <div class="field">
    <%= f.label :movie_id %><br>
    <%= f.select(:movie_id, options_from_collection_for_select(Movie.all, :id, :title)) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Director:</strong>
  <%= @movie.director.name %>
</p>

<h3>Cast</h3>
<ul>
  <% @movie.roles.each do |role| %>
    <li><%= role.character_name %> played by <%= role.actor.name %></li>
  <% end %>
</ul>

<h3>Users who voted for this movie</h3>
<ul>
  <% @movie.users.each do |user| %>
    <li>
      <%= link_to user.name, user_url(user.id)  %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>











